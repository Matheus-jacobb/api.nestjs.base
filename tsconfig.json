{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "@common/swagger": [
        "libs/swagger/src"
      ],
      "@common/swagger/*": [
        "libs/swagger/src/*"
      ],
      "@common/body-parser": [
        "libs/body-parser/src"
      ],
      "@common/body-parser/*": [
        "libs/body-parser/src/*"
      ],
      "@common/validation": [
        "libs/validation/src"
      ],
      "@common/validation/*": [
        "libs/validation/src/*"
      ],
      "@common/logger": [
        "libs/logger/src"
      ],
      "@common/logger/*": [
        "libs/logger/src/*"
      ],
      "@common/config": [
        "libs/config/src"
      ],
      "@common/config/*": [
        "libs/config/src/*"
      ],
      "@common/paginated": [
        "libs/paginated/src"
      ],
      "@common/paginated/*": [
        "libs/paginated/src/*"
      ],
      "@common/authorization": [
        "libs/authorization/src"
      ],
      "@common/authorization/*": [
        "libs/authorization/src/*"
      ],
      "@common/typeorm": [
        "libs/typeorm/src"
      ],
      "@common/typeorm/*": [
        "libs/typeorm/src/*"
      ],
      "@common/authentication": [
        "libs/authentication/src"
      ],
      "@common/authentication/*": [
        "libs/authentication/src/*"
      ]
    }
  }
}
